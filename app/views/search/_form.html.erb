<%= form_tag(@path, method: :get, 'data-turboform' => true, class: 'form-horizontal') do %>
  <div class="form-group form-group-lg">
      <%= label_tag @html_id, @label.capitalize + ' :', class: 'col-sm-3 control-label' %>
      <div class="col-sm-5">
          <%= search_field_tag :query, nil, id: @html_id, class: 'form-control' %>
      </div>
      <div class="visible-xs-block"><br/></div>
      <div class="col-sm-2">
          <%= submit_tag 'Search', class: 'btn btn-primary btn-lg' %>
      </div>
  </div>
<% end %>
