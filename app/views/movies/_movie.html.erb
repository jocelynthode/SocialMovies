<%= content_tag :div, class: 'col-lg-3 col-md-3', data: {id: movie.id} do %>
      <div class="panel">
        <div class="panel-heading panel-default">
          <div class="row">
            <%= link_to fa_icon('times lg fw'),
                        hide_movie_path(movie), remote: true, method: :put,
                        class: 'pull-right', data: {id: movie.id} %>
          </div>
          <%= link_to movie_path(movie) do %>
          <%= image_tag poster_movie_path(movie.imdb), style: 'max-height: 150px;' %>
          <div class="row text-center">
            <h4><%= movie.title %> (<%= movie.release_date %>)</h4>
          </div>
          <% end %>
        </div>
  <div class="panel-footer text-center">
    <% if user_signed_in? && current_user.likes?(movie) %>
        <%= link_to fa_icon('thumbs-up lg fw'),
                    recommend_movie_path(movie), remote: true, method: :put,
                    class: 'btn btn-default like-button', role: 'button' %>
        <%= link_to fa_icon('thumbs-o-down lg fw'),
                    recommend_movie_path(movie), remote: true, method: :put,
                    class: 'btn btn-default dislike-button', role: 'button' %>
    <% elsif user_signed_in? && current_user.dislikes?(movie) %>
        <%= link_to fa_icon('thumbs-o-up lg fw'),
                    recommend_movie_path(movie), remote: true, method: :put,
                    class: 'btn btn-default like-button', role: 'button' %>
        <%= link_to fa_icon('thumbs-down lg fw'),
                    recommend_movie_path(movie), remote: true, method: :put,
                    class: 'btn btn-default dislike-button', role: 'button' %>
    <% else %>
        <%= link_to fa_icon('thumbs-o-up lg fw'),
                    recommend_movie_path(movie), remote: true, method: :put,
                    class: 'btn btn-default like-button', role: 'button' %>
        <%= link_to fa_icon('thumbs-o-down lg fw'),
                    recommend_movie_path(movie), remote: true, method: :put,
                    class: 'btn btn-default dislike-button', role: 'button' %>
    <% end %>
    <% if user_signed_in? && current_user.bookmarks?(movie) %>
        <%= link_to fa_icon('star lg fw'),
                    bookmark_movie_path(movie), remote: true, method: :put,
                    class: 'btn btn-default bookmark-button', style: 'color:gold;', role: 'button' %>
    <% else %>
        <%= link_to fa_icon('star-o lg fw'),
                    bookmark_movie_path(movie), remote: true, method: :put,
                    class: 'btn btn-default bookmark-button', style: 'color:gold;', role: 'button' %>
    <% end %>
    <!-- Single button -->
    <div class="btn-group">
      <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <span class="glyphicon glyphicon-star-empty" aria-hidden="true"></span> Add to list <span class="caret"></span>
      </button>
      <ul class="dropdown-menu">
        <% @lists.each do |list| %>
          <li><%= link_to list.name, movielists_path(:list_id => list.id, :movie_id => movie.id), method: :post %></li>
        <% end %>
      </ul>
    </div>
  </div>
  </div>
<% end %>
