<%# navigation styled for Bootstrap 3.0 %>
<%= nav_bar brand: 'Social Movies',
            brand_link: root_path,
            inverse: true,
            responsive: true,
            fixed: :top do %>

  <%= menu_group pull: :left do %>
    <%= menu_item 'Home', root_path %>
  <% end %>

  <%= menu_group pull: :right do %>
    <%# TODO: set real user profile path %>
    <%= menu_item current_user.email, '#' if user_signed_in? %>
    <%= drop_down fa_icon('user lg') do %>
      <% if user_signed_in? %>
        <%= menu_item fa_icon('user fw', text: 'Profile'), '#' %>
        <%= drop_down_divider %>
        <%= menu_item fa_icon('sign-out fw', text: 'Log out'), destroy_user_session_path, method: :delete %>
      <% else %>
        <%= menu_item fa_icon('sign-in fw', text: 'Log in'), new_user_session_path %>
        <%= drop_down_divider %>
        <%= menu_item fa_icon('user-plus fw', text: 'Sign up'), new_user_registration_path %>
      <% end %>
    <% end %>
  <% end %>

<% end %>